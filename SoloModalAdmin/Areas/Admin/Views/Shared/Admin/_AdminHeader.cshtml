@using SoloModalAdmin.Areas.Admin.Models
@model PageContent
@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
}

<div class="header bg-primary pb-6">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <h6 class="h2 text-white d-inline-block mb-0">admin</h6>
                    <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                        <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                            <li class="breadcrumb-item"><a href="#"><i class="fas fa-home"></i></a></li>
                                <li class="breadcrumb-item @(currentController == "Default" ? "active" : "")">
                                    @if (currentController == "Default")
                                    {
                                        <span>Default</span>
                                    }
                                    else
                                    {
                                        <a href="@Url.Action("Index", "Default", new { area = "Admin" })">Default</a>
                                    }
                                </li>
                            
                        
                            <li class="breadcrumb-item active" aria-current="page">
                                @if (Model?.HasOpenModal == true)
                                   {
                                    <span>@Model.PageType</span>
                                   }
                                else
                                   {
                                   <span>Default</span>
                                   }
                            </li>
                        </ol>
                    </nav>
                </div>
                <div class="col-lg-6 col-5 text-right">
                    <a href="#" class="btn btn-sm btn-neutral">New</a>
                    <a href="#" class="btn btn-sm btn-neutral">Filters</a>
                </div>
            </div>

            @* Modal içeriğini dinamik belirlemek için PageType ve Title bilgilerini data attribute olarak JS tarafına iletiyorum. *@
            @if (Model?.HasOpenModal == true)
            {
                <div class="row mb-4">
                    <button href="" class="btn btn-sm btn-neutral fs-5" data-page="@Model.PageType" data-title="@Model.Title"
                    onclick="onOpenModal(this)">@Model.Title</button>

                </div>
            }
        
        </div>
    </div>
</div>
